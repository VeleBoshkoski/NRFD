<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_place"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vele_.nearbyrestaurantsfoodanddrinks.PlaceActivity"
    tools:showIn="@layout/activity_place">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:id="@+id/imagePlace" />

    <TextView
        android:text="Name"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/pName"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Rating"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pRating"
        android:layout_below="@+id/pName"
        android:layout_alignLeft="@+id/pName"
        android:layout_alignStart="@+id/pName"
        android:layout_marginTop="5dp" />

    <TextView
        android:text="Vicinity"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pVicinity"
        android:layout_below="@+id/pRating"
        android:layout_alignLeft="@+id/pRating"
        android:layout_alignStart="@+id/pRating"
        android:layout_marginTop="5dp" />

    <TextView
        android:text="Is open now"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pIsOpen"
        android:layout_below="@+id/pVicinity"
        android:layout_alignLeft="@+id/pVicinity"
        android:layout_alignStart="@+id/pVicinity"
        android:layout_marginTop="5dp" />

</RelativeLayout>
